<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.loaizasoftware.presentation.features.weather.WeatherViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/backgroundContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="48dp"
            tools:background="@drawable/background_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:text="@{viewModel.weatherData.name}"
                    tools:text="New York" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:textSize="80sp"
                    android:text="@{viewModel.weatherData.main.getFormattedTemp()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="75째" />

                <TextView
                    android:id="@+id/tvTempMaxMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/white"
                    android:text="@{viewModel.weatherData.main.getFormattedTempMinAndMax()}"
                    app:layout_constraintLeft_toRightOf="@id/tvTemp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Max 80째 / Min 70째 " />

                <TextView
                    android:id="@+id/tvTempFeelsLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/white"
                    android:text="@{viewModel.weatherData.main.getFormattedFeelsLike()}"
                    app:layout_constraintLeft_toRightOf="@id/tvTemp"
                    app:layout_constraintTop_toBottomOf="@id/tvTempMaxMin"
                    tools:text="Feels like 72째" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvWeatherMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24.dp"
                android:textStyle="bold"
                android:text="@{viewModel.weatherData.weather.size() > 0 ? viewModel.weatherData.weather.get(0).main : ``}"
                tools:text="Cloudy" />

            <TextView
                android:id="@+id/tvWeatherDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@{viewModel.weatherData.weather.size() > 0 ? viewModel.weatherData.weather.get(0).description : ``}"
                tools:text="broken clouds" />

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@{viewModel.weatherData.main.getFormattedHumidity()}"
                tools:text="Humidity: 65%" />

            <TextView
                android:id="@+id/tvWind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@{viewModel.weatherData.wind.getFormattedWindSpeed()}"
                tools:text="Wind: 5.2 m/s" />

            <TextView
                android:id="@+id/tvPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@{viewModel.weatherData.main.getFormattedPressure()}"
                tools:text="Pressure: 1013 hPa" />

        </LinearLayout>

    </FrameLayout>

</layout>